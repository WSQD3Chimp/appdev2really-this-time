<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBook">

    <TextView
        android:id="@+id/updateBookTW2"
        android:layout_width="259dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:text="Update Book"
        android:textAlignment="center"
        android:textSize="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateBookTitle2"
        android:layout_width="308dp"
        android:layout_height="77dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateBookTW2" />

    <EditText
        android:id="@+id/updateAuthNameTW2"
        android:layout_width="302dp"
        android:layout_height="78dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Author name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateBookTitle2" />

    <EditText
        android:id="@+id/updateYearReleasedTW2"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Year of Release"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAuthNameTW2" />

    <EditText
        android:id="@+id/updateQuantInStock2"
        android:layout_width="299dp"
        android:layout_height="67dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Quantity in stock"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateYearReleasedTW2" />

    <Button
        android:id="@+id/updateBookB2"
        android:layout_width="210dp"
        android:layout_height="78dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Update book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateQuantInStock2" />

    <Button
        android:id="@+id/backToLibrAct3"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>